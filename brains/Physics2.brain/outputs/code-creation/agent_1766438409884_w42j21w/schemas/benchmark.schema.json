{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/benchmark.schema.json",
  "title": "Minimal Benchmark Run Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "timestamp",
    "benchmark",
    "system",
    "results"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Version of this benchmark schema.",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": [
        "1.0.0"
      ]
    },
    "run_id": {
      "type": "string",
      "description": "Client-chosen identifier for this run (unique within a project).",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the run started (UTC recommended).",
      "format": "date-time"
    },
    "benchmark": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        }
      }
    },
    "system": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "model",
        "runner"
      ],
      "properties": {
        "model": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "provider": {
              "type": "string"
            },
            "version": {
              "type": "string"
            },
            "parameters": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "runner": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "name",
            "version"
          ],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "version": {
              "type": "string",
              "minLength": 1
            },
            "commit": {
              "type": "string"
            }
          }
        },
        "hardware": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "cpu": {
              "type": "string"
            },
            "gpu": {
              "type": "string"
            },
            "ram_gb": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "os": {
          "type": "string"
        }
      }
    },
    "config": {
      "type": "object",
      "description": "Benchmark configuration used for the run; intentionally open-ended.",
      "additionalProperties": true
    },
    "results": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/result"
      }
    },
    "summary": {
      "type": "object",
      "description": "Optional aggregated metrics for the whole run.",
      "additionalProperties": true
    },
    "notes": {
      "type": "string"
    }
  },
  "$defs": {
    "result": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "case_id",
        "status",
        "metrics"
      ],
      "properties": {
        "case_id": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "description": "Outcome for this case.",
          "enum": [
            "pass",
            "fail",
            "error",
            "skip"
          ]
        },
        "metrics": {
          "type": "object",
          "description": "Case-level metrics (scores, latencies, etc.).",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "number"
              },
              {
                "type": "integer"
              },
              {
                "type": "string"
              },
              {
                "type": "boolean"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "output": {
          "type": [
            "object",
            "string",
            "null"
          ],
          "description": "Optional raw model output for the case.",
          "additionalProperties": true
        },
        "error": {
          "type": "object",
          "description": "Present when status=error.",
          "additionalProperties": false,
          "required": [
            "message"
          ],
          "properties": {
            "message": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "traceback": {
              "type": "string"
            }
          }
        },
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "ended_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "status": {
                "const": "error"
              }
            }
          },
          "then": {
            "required": [
              "error"
            ]
          }
        }
      ]
    }
  }
}
