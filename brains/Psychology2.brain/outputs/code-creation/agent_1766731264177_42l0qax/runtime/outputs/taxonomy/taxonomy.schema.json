{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/runtime/outputs/taxonomy/taxonomy.schema.json",
  "title": "Canonical Taxonomy Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["taxonomy_version", "nodes"],
  "properties": {
    "taxonomy_version": {
      "type": "string",
      "minLength": 1,
      "description": "Semantic version or other version identifier for the taxonomy payload."
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Optional ISO-8601 timestamp of when the taxonomy JSON was generated."
    },
    "source": {
      "type": "string",
      "minLength": 1,
      "description": "Optional provenance (e.g., repository URL, paper, curator)."
    },
    "notes": {
      "type": "string",
      "description": "Optional free-form notes about the taxonomy."
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/node" },
      "description": "Flat list of taxonomy nodes; relationships expressed via parent_id."
    }
  },
  "$defs": {
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._:-]*$",
      "description": "Stable identifier; recommended to be URL-safe and immutable."
    },
    "node_type": {
      "type": "string",
      "minLength": 1,
      "description": "Optional node type (e.g., domain, category, label)."
    },
    "node": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "label"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "label": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable label."
        },
        "description": {
          "type": "string",
          "description": "Optional longer description/definition."
        },
        "type": { "$ref": "#/$defs/node_type" },
        "parent_id": {
          "anyOf": [
            { "$ref": "#/$defs/id" },
            { "type": "null" }
          ],
          "description": "Optional parent node id; null/absent indicates a root node."
        },
        "aliases": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true,
          "description": "Optional alternative names/synonyms."
        },
        "examples": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "description": "Optional example strings illustrating usage."
        },
        "tags": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true,
          "description": "Optional free-form tags."
        },
        "status": {
          "type": "string",
          "enum": ["active", "deprecated"],
          "description": "Lifecycle state of the node."
        },
        "deprecated_reason": {
          "type": "string",
          "description": "If status is deprecated, an optional reason."
        },
        "replaced_by": {
          "anyOf": [
            { "$ref": "#/$defs/id" },
            {
              "type": "array",
              "items": { "$ref": "#/$defs/id" },
              "minItems": 1
            },
            { "type": "null" }
          ],
          "description": "Optional replacement node id(s) when deprecated."
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true,
          "description": "Optional extension point for project-specific fields."
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "status": { "const": "deprecated" } },
            "required": ["status"]
          },
          "then": {
            "anyOf": [
              { "required": ["deprecated_reason"] },
              { "required": ["replaced_by"] }
            ]
          }
        }
      ]
    }
  }
}
