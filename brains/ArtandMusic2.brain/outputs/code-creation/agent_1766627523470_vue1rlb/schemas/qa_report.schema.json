{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/qa_report.schema.json",
  "title": "QA Report",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "generated_at", "runner", "summary", "checks", "outputs"],
  "properties": {
    "schema_version": { "type": "string", "minLength": 1 },
    "generated_at": { "type": "string", "format": "date-time" },
    "runner": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "type": "string", "enum": ["docker", "failsafe", "unknown"] },
        "name": { "type": "string" },
        "version": { "type": "string" },
        "container_available": { "type": "boolean" },
        "invocation_id": { "type": "string" }
      }
    },
    "environment": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "platform": { "type": "string" },
        "python_version": { "type": "string" },
        "cwd": { "type": "string" }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "exit_code"],
      "properties": {
        "status": { "type": "string", "enum": ["pass", "fail", "error"] },
        "exit_code": { "type": "integer", "minimum": 0, "maximum": 255 },
        "duration_ms": { "type": "integer", "minimum": 0 },
        "notes": { "type": "string" }
      }
    },
    "checks": {
      "type": "array",
      "items": { "$ref": "#/$defs/check" }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["report_path", "log_paths"],
      "properties": {
        "report_path": { "type": "string", "minLength": 1 },
        "log_paths": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "artifacts": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "errors": {
      "type": "array",
      "items": { "$ref": "#/$defs/error" }
    }
  },
  "$defs": {
    "check": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "status"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "status": { "type": "string", "enum": ["pass", "fail", "skip", "error"] },
        "title": { "type": "string" },
        "details": { "type": "string" },
        "data": { "type": ["object", "array", "string", "number", "integer", "boolean", "null"] },
        "timing_ms": { "type": "integer", "minimum": 0 },
        "artifacts": {
          "type": "array",
          "items": { "$ref": "#/$defs/artifact" }
        },
        "links_checked": { "type": "boolean" }
      }
    },
    "artifact": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "mime_type": { "type": "string" }
      }
    },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 },
        "where": { "type": "string" },
        "stack": { "type": "string" }
      }
    }
  }
}
