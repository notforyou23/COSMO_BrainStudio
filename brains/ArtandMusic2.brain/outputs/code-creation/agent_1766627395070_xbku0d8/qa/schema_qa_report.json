{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/schema_qa_report.json",
  "title": "QA_REPORT",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "run", "summary", "checks"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^v\\d+\\.\\d+\\.\\d+$" },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": ["run_id", "started_at", "command", "inputs"],
      "properties": {
        "run_id": { "type": "string", "minLength": 1 },
        "started_at": { "type": "string", "format": "date-time" },
        "finished_at": { "type": ["string", "null"], "format": "date-time" },
        "duration_ms": { "type": ["integer", "null"], "minimum": 0 },
        "command": { "type": "string", "minLength": 1 },
        "tool": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": { "type": "string" },
            "version": { "type": "string" },
            "git_commit": { "type": "string" }
          }
        },
        "environment": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "python": { "type": "string" },
            "platform": { "type": "string" },
            "cwd": { "type": "string" }
          }
        },
        "inputs": {
          "type": "object",
          "additionalProperties": false,
          "required": ["report_path"],
          "properties": {
            "report_path": { "type": "string", "minLength": 1 },
            "artifact_paths": { "type": "array", "items": { "type": "string", "minLength": 1 } },
            "remediation_catalog_path": { "type": ["string", "null"] }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "counts"],
      "properties": {
        "status": { "type": "string", "enum": ["pass", "fail"] },
        "counts": {
          "type": "object",
          "additionalProperties": false,
          "required": ["total", "pass", "fail", "warn", "skip", "error"],
          "properties": {
            "total": { "type": "integer", "minimum": 0 },
            "pass": { "type": "integer", "minimum": 0 },
            "fail": { "type": "integer", "minimum": 0 },
            "warn": { "type": "integer", "minimum": 0 },
            "skip": { "type": "integer", "minimum": 0 },
            "error": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/checkResult" }
    },
    "notes": { "type": "array", "items": { "type": "string" } }
  },
  "$defs": {
    "checkResult": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "title", "status"],
      "properties": {
        "id": { "type": "string", "minLength": 1, "pattern": "^[A-Z0-9_\\-]+$" },
        "title": { "type": "string", "minLength": 1 },
        "category": { "type": ["string", "null"] },
        "severity": { "type": ["string", "null"], "enum": ["info", "low", "medium", "high", "critical", null] },
        "status": { "type": "string", "enum": ["pass", "fail", "warn", "skip", "error"] },
        "message": { "type": ["string", "null"] },
        "details": { "type": ["object", "array", "string", "number", "boolean", "null"] },
        "evidence": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["kind", "value"],
            "properties": {
              "kind": { "type": "string", "minLength": 1 },
              "value": { "type": ["string", "number", "boolean", "object", "array", "null"] }
            }
          }
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["message"],
            "properties": {
              "code": { "type": ["string", "null"] },
              "message": { "type": "string", "minLength": 1 },
              "path": { "type": ["string", "null"] },
              "context": { "type": ["object", "null"] }
            }
          }
        },
        "remediation": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "catalog_id": { "type": ["string", "null"] },
            "pointers": { "type": "array", "items": { "type": "string" } }
          }
        },
        "artifacts": { "type": "array", "items": { "type": "string" } },
        "timing_ms": { "type": ["integer", "null"], "minimum": 0 }
      }
    }
  }
}
