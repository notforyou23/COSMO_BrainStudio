{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/outputs/catalog/METADATA_SCHEMA.json",
  "title": "Case Study Catalog Metadata Schema",
  "type": "object",
  "oneOf": [
    { "$ref": "#/$defs/CaseStudy" },
    { "$ref": "#/$defs/Index" }
  ],
  "$defs": {
    "Slug": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "minLength": 1,
      "maxLength": 80
    },
    "ISODate": {
      "type": "string",
      "pattern": "^\d{4}-\d{2}-\d{2}$"
    },
    "ISODateTime": {
      "type": "string",
      "format": "date-time"
    },
    "NonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "Person": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "$ref": "#/$defs/NonEmptyString" },
        "role": { "type": "string" },
        "affiliation": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "Link": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "url"],
      "properties": {
        "label": { "$ref": "#/$defs/NonEmptyString" },
        "url": { "type": "string", "format": "uri" },
        "kind": { "type": "string", "enum": ["paper", "repo", "dataset", "demo", "blog", "other"] }
      }
    },
    "Metric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "value"],
      "properties": {
        "name": { "$ref": "#/$defs/NonEmptyString" },
        "value": { "type": ["number", "string", "boolean"] },
        "unit": { "type": "string" },
        "note": { "type": "string" }
      }
    },
    "Artifact": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "kind"],
      "properties": {
        "path": { "$ref": "#/$defs/NonEmptyString", "description": "Repo-relative or outputs-relative path." },
        "kind": { "type": "string", "enum": ["report", "notebook", "code", "data", "figure", "other"] },
        "description": { "type": "string" },
        "sha256": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" }
      }
    },
    "CaseStudy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema_version", "slug", "title", "summary", "created_at", "updated_at"],
      "properties": {
        "schema_version": {
          "type": "string",
          "description": "Schema version for forward-compatible tooling.",
          "enum": ["1.0"]
        },
        "slug": { "$ref": "#/$defs/Slug" },
        "title": { "$ref": "#/$defs/NonEmptyString" },
        "summary": { "$ref": "#/$defs/NonEmptyString", "maxLength": 800 },
        "description": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string", "minLength": 1, "maxLength": 64 },
          "uniqueItems": true,
          "default": []
        },
        "domain": { "type": "string", "description": "High-level application domain (e.g., education, healthcare)." },
        "status": { "type": "string", "enum": ["draft", "active", "archived"], "default": "draft" },
        "created_at": { "$ref": "#/$defs/ISODateTime" },
        "updated_at": { "$ref": "#/$defs/ISODateTime" },
        "date": { "$ref": "#/$defs/ISODate", "description": "Optional canonical date for the case study (YYYY-MM-DD)." },
        "authors": { "type": "array", "items": { "$ref": "#/$defs/Person" }, "default": [] },
        "contributors": { "type": "array", "items": { "$ref": "#/$defs/Person" }, "default": [] },
        "links": { "type": "array", "items": { "$ref": "#/$defs/Link" }, "default": [] },
        "metrics": { "type": "array", "items": { "$ref": "#/$defs/Metric" }, "default": [] },
        "artifacts": { "type": "array", "items": { "$ref": "#/$defs/Artifact" }, "default": [] },
        "inputs": { "type": "array", "items": { "$ref": "#/$defs/Artifact" }, "default": [] },
        "outputs": { "type": "array", "items": { "$ref": "#/$defs/Artifact" }, "default": [] },
        "provenance": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "source": { "type": "string" },
            "method": { "type": "string" },
            "tool": { "type": "string" },
            "commit": { "type": "string" }
          }
        },
        "extra": {
          "type": "object",
          "description": "Extension point for project-specific fields; kept separate from core schema.",
          "additionalProperties": true,
          "default": {}
        }
      }
    },
    "IndexItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["slug", "title", "path", "updated_at"],
      "properties": {
        "slug": { "$ref": "#/$defs/Slug" },
        "title": { "$ref": "#/$defs/NonEmptyString" },
        "summary": { "type": "string", "maxLength": 800 },
        "tags": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 64 }, "uniqueItems": true, "default": [] },
        "status": { "type": "string", "enum": ["draft", "active", "archived"] },
        "path": { "$ref": "#/$defs/NonEmptyString", "description": "Relative path to the case_study.json file." },
        "updated_at": { "$ref": "#/$defs/ISODateTime" }
      }
    },
    "Index": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema_version", "generated_at", "items"],
      "properties": {
        "schema_version": { "type": "string", "enum": ["1.0"] },
        "generated_at": { "$ref": "#/$defs/ISODateTime" },
        "items": { "type": "array", "items": { "$ref": "#/$defs/IndexItem" }, "default": [] }
      }
    }
  }
}
